<%# Add buttons for each card. This is the unchanged code from mint. %>
<body class="bg-white position-relative">
  <div class="d-flex justify-content-center text-align-center my-2">
    <h3><strong>Set Up</strong></h3>
  </div>
  <div class="cards" >
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-12">
          <div class="card-trip" data-controller="quantity">
            <div class="quantity-buttons">
              <span data-quantity-target="productQuantity"><% product.quantity %></span>
              <%= link_to "+", "#", class: "btn-ghost left-button", data: { action: "click->quantity#add" }, style: "text-decoration: none" %>
              <%= link_to "-", "#", class: "btn-ghost right-button", data: { action: "click->quantity#subtract" }, style: "text-decoration: none" %>
            </div>
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, class:"" %>
            <% else %>
              <%= image_tag "https://cdn.vectorstock.com/i/preview-1x/65/30/default-image-icon-missing-picture-page-vector-40546530.jpg"%>
            <% end %>
            <div class="card-trip-infos">
              <h2><%= product.name %></h2>
              <h2 class="card-trip-pricing"><%= number_to_currency(product.price, { unit: 'Â¥', precision: 0 }) %></h2>
              <span data-quantity-target="showProductQuantity"><%= product.quantity %></span>
            </div>
          </div>
          <%# <%= link_to edit_product_path, class:"card-trip-link" do %>
          <%# <i class="fa-solid fa-pen-to-square"></i> %>
          <%# <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-create">
    <%= link_to new_product_path, class:"btn-create" do %>
      <i class="fa-solid fa-circle-plus" style="color: #f2c218;"></i>
    <% end %>
  </div>
</body>
