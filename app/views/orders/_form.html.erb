<%# Add buttons for each card. This is the unchanged code from mint. %>
<div class="bg-white position-relative">
  <div class="d-flex justify-content-center text-align-center my-2">
    <h3><strong>Selling page</strong></h3>
  </div>
  <div class="d-flex flex-row-reverse me-4 mb-3">
    <%= link_to new_order_path, class:"text-decoration-none" do %>
      <button class="switch-button" style="vertical-align:middle"><span> Selling mode </span></button>
    <% end %>
  </div>
  <div class="cards">
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-12">
          <div class="card-trip" data-controller="quantity">
            <div class="quantity-buttons">
              <%= link_to "+", "#", class: "btn-ghost right-button", data: { action: "click->quantity#add" }, style: "text-decoration: none" %>
              <%= link_to "-", "#", class: "btn-ghost left-button", data: { action: "click->quantity#subtract" }, style: "text-decoration: none" %>
            </div>
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, class:"" %>
            <% else %>
              <%= image_tag "https://cdn.vectorstock.com/i/preview-1x/65/30/default-image-icon-missing-picture-page-vector-40546530.jpg" %>
            <% end %>
            <div class="row">
              <div class="card-trip-info-details">
                <h2 class="card-trip-info-name"><%= product.name %></h2>
                <h2 class="card-trip-pricing m-sm-1"><%= number_to_currency(product.price, { unit: 'Â¥', precision: 0 }) %></h2>
                <div data-quantity-target="showProductQuantity displayQuantity" class="product-quantity"><%= product.quantity %></div>
              </div>
            </div>
          </div>
          <%# <%= link_to edit_product_path, class:"card-trip-link" do %>
          <%# <i class="fa-solid fa-pen-to-square"></i> %>
          <%# <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="centered-button">
    <button class="btn btn-outline-warning btn-block btn-stretch">
      <i class="fa-solid fa-cart-shopping"></i>
    </button>
  </div>
</div>
