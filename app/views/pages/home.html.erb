<div id="background-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dxarsyyur/image/upload/v1724315520/pexels-tara-winstead-6489663_mdssvu.jpg')">
  <div class="home-background mt-0">
    <div class="home-text text-center">
      <h1 id="header-first">👋 <br>
        Say Hi to Your<br>
        Lemonade<br>
        Stand 🍋 </h1>
      <!-- buttons -->
      <div class="landing-button">
        <p class="m-0 mt-5">
          <%= link_to products_path, class:"text-decoration-none" do %>
            <button class="switch-button-landing" style="vertical-align:middle"><span> Setup Store</span></button>
          <% end %>
        </p>
        <p>
          <% if current_user && current_user.products.any? %>
            <%= link_to edit_order_path(@order) do %>
              <button class="switch-button-landing" style="vertical-align:middle"><span> Start Selling</span></button>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>
<%# carousel start %>
<div id="LSbanner" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" data-bs-interval="5000">
      <%= image_tag "https://res.cloudinary.com/djqladxhq/image/upload/v1724646106/1_kjliuv.png", class:"d-block w-100 "%>
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <%= image_tag "https://res.cloudinary.com/djqladxhq/image/upload/v1724646106/2_zdymbk.png", class:"d-block w-100"%>
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <%= image_tag "https://res.cloudinary.com/djqladxhq/image/upload/v1724646106/3_zc2x8n.png", class:"d-block w-100"%>
    </div>
    <div class="carousel-item" data-bs-interval="5000">
      <%= image_tag "https://res.cloudinary.com/djqladxhq/image/upload/v1724646106/4_rpwx8i.png", class:"d-block w-100"%>
    </div>
    <div class="carousel-item" data-bs-interval="10000">
      <%= image_tag "https://res.cloudinary.com/djqladxhq/image/upload/v1724646106/5_tqxlfy.png", class:"d-block w-100"%>
    </div>
  </div>
  <a class="carousel-control-prev" href="#LSbanner" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#LSbanner" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<%# carousel end %>
