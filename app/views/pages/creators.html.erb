<div class="creator-container">
  <div class="creator-cards">
    <% @members.each do |member| %>
      <div class="row">
        <div class="col-12">
          <div class="card-trip-creator">
            <%= image_tag member[:image_url], alt: member[:name] %>
            <div class="card-trip-infos mt-2">
              <div>
                <h2><%= member[:cute_name] %></h2>
                <p><%= member[:title] %></p>
              </div>
              <div class="card-trip-infos-right text-end">
                <p><%= link_to member[:linkedin], class:"text-decoration-none" do %>
                  <i class="fab fa-linkedin"></i>
                <% end %></p>
                <p><%= link_to member[:github_url], class:"text-decoration-none" do %>
                  <i class="fa-brands fa-github"></i>
                <% end %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
