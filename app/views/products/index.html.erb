<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<%# This needs to be put somewhere else %>
<body class="bg-white position-relative">
  <div class="d-flex justify-content-center text-align-center my-2">
    <h3><strong>Set Up</strong></h5>
  </div>
  <div class="cards">
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-12">
          <div class="card-trip">
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, class:"" %>
            <% else %>
              <%= image_tag "https://cdn.vectorstock.com/i/preview-1x/65/30/default-image-icon-missing-picture-page-vector-40546530.jpg"%>
            <% end %>
            <div class="card-trip-infos">
              <h2><%= product.name %></h2>
              <h2 class="card-trip-pricing"><%= number_to_currency(product.price, { unit: 'Â¥', precision: 0 })%></h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-create">
    <button type="button" class="fa-solid fa-circle-plus btn-create" style="color: #E2AB2D" data-bs-toggle="modal" data-bs-target="#CreateProductModal">
    </button>
    <!-- Modal -->
    <%= render 'new_modal' %>
    <%# Model End %>
  </body>
