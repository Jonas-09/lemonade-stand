<%# This needs to be put somewhere else %>
<body class="bg-white position-relative">
  <div class="d-flex justify-content-center text-align-center my-2">
    <h3><strong>Set Up</strong></h5>
  </div>
  <div class="cards">
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-12">
          <div class="card-trip">
            <% if product.photo.attached? %>
              <%= cl_image_tag product.photo.key, class:"" %>
            <% else %>
              <%= image_tag "https://cdn.vectorstock.com/i/preview-1x/65/30/default-image-icon-missing-picture-page-vector-40546530.jpg"%>
            <% end %>
            <div class="card-trip-infos">
              <h2><%= product.name %></h2>
              <h2 class="card-trip-pricing"><%= number_to_currency(product.price, { unit: 'Â¥', precision: 0 })%></h2>
            </div>
          </div>
          <%# <%= link_to edit_product_path, class:"card-trip-link" do %>
            <%# <i class="fa-solid fa-pen-to-square"></i> %>
            <%# <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-create">
      <%= link_to new_product_path, class:"btn-create" do %>
        <i class="fa-solid fa-circle-plus" style="color: #f2c218;"></i>
      <% end %>
    </div>
    <%# Modal Start %>
    <!-- Button trigger modal -->
    <button type="button" class="fa-solid fa-circle-plus" style="color: $primary-color" data-bs-toggle="modal" data-bs-target="#exampleModal">
    </button>
    <!-- Modal -->
    <div class="modal fade slide-up-modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-slide-up">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <%# Model End %>
  </body>
