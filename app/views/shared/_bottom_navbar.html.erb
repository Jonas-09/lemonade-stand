<div class="bottom-navbar" data-controller="bottom-navbar">
  <ul>
    <%= link_to root_path, class:"text-decoration-none" do %>
      <li data-bottom-navbar-value="0" data-bottom-navbar-target="links <%= "active" if params[:controller] == 'pages' && params[:action] == 'home' %>"><i class="fa-solid fa-house"></i></li>
    <% end %>

    <%= link_to products_path, class:"text-decoration-none" do %>
      <li data-bottom-navbar-value="1" data-bottom-navbar-target="links <%= "active" if params[:controller] == 'products' && params[:action] == 'index' %>"><i class="fa-solid fa-pencil"></i></li>
    <% end %>

    <%= link_to orders_path, class:"text-decoration-none" do %>
      <li data-bottom-navbar-value="2" data-bottom-navbar-target="links <%= "active" if params[:controller] == 'orders' && params[:action] == 'index' %>"><i class="fa-solid fa-book"></i></li>
    <% end %>

    <%= link_to edit_order_path(@order), class:"text-decoration-none" do %>
      <li data-bottom-navbar-value="3" data-bottom-navbar-target="links <%= "active" if params[:controller] == 'orders' && params[:action] == 'edit' %>"><i class="fa-solid fa-money-bill-transfer"></i></li>
    <% end %>

    <%= link_to events_path, class:"text-decoration-none" do %>
      <li data-bottom-navbar-value="4" data-bottom-navbar-target="links <%= "active" if params[:controller] == 'events' && params[:action] == 'index' %>"><i class="fa-solid fa-chart-pie"></i></li>
    <% end %>

    <div id="circle" data-bottom-navbar-target="circle"><i class="fa-solid fa-book"></i></div>
  </ul>
</div>
