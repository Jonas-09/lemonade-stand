<% @events.each do |event| %>
  <div class="card-product d-flex">
    <% if event.photo.attached? %>
      <%= cl_image_tag event.photo.key, width: 300, height: 210, crop: "fit" %> <!-- We can change picture size and qualitity here -->
    <% else %>
      <%= image_tag asset_path('event_default_image.png') %>
    <% end %>
    <div class="card-product-infos">
      <h2><%= event.event_name %></h2>
      <p>
        <%= event.start_date.strftime("%B %d,") %> to <%= event.end_date.strftime("%B %d, %Y") %>
      </p>
    </div>
    <!-- Edit Button -->
  </div>
<% end %>
